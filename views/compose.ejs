<%- include("partials/header") %>
    <div class="composecheck"></div>
    <div class="overlay"></div>
    <div class="about container-fluid text-center" data-aos="fade-left">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="page-heading">
                    <h1>Compose a blog</h1>
                    <h2>
                        <%= date %>
                    </h2>
                </div>
            </div>

        </div>
    </div>


    </header>
    <br>
    <br>
    <div class="container" data-aos="fade-up-left">
        <div class="col-lg-10 col-md-10 mx-auto">
            <form action="/compose" method="post">
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label for="">
                            <h3>
                                First Name:
                            </h3>
                        </label>
                        <input type="text" class="form-control" name="fname" id="" required>
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="">
                            <h3>
                                Last Name:
                            </h3>
                        </label>
                        <input type="text" class="form-control" name="lname" id="" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="">
                        <h3>
                            Title:
                        </h3>
                    </label>
                    <input type="text" class="form-control" name="blogtitle" id="" required>
                </div>

                <div class="form-group">
                    <label for="">
                        <h3>
                            Post:
                        </h3>
                    </label>
                    <textarea class="form-control" name="blogbody" id="" cols="50" rows="30" required></textarea>
                </div>
                <div class="text-center ">
                    <button class="btn btn-primary btn-lg compose" type="submit" name="blogsubmit">Publish</button>
                </div>



            </form>
        </div>
    </div>
    <%- include("partials/footer") %>